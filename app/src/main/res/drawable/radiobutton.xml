<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <size
                android:width="@dimen/round_controls_fixed_size"
                android:height="@dimen/round_controls_fixed_size" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="@dimen/stroke_thickness"
                android:color="@android:color/white" />
            <solid android:color="#A0000000" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/round_controls_interior_delta"
        android:left="@dimen/round_controls_interior_delta"
        android:right="@dimen/round_controls_interior_delta"
        android:top="@dimen/round_controls_interior_delta">
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_checked="true">
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>

