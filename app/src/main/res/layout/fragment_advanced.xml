<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical">


    <!-- navigation buttons band start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/custom_background"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_equalizer"
            android:layout_width="@dimen/balance_button_width"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/sound_style_button"
            android:gravity="center"
            android:shadowColor="#b0000000"
            android:shadowRadius="2.0"
            android:text="@string/button_equalizer"
            android:textColor="@drawable/button_font_style"
            android:textSize="20.0sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/bt_balance"
            android:layout_width="@dimen/balance_button_width"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/sound_style_button"
            android:gravity="center"
            android:shadowColor="#b0000000"
            android:shadowRadius="2.0"
            android:text="@string/button_balance"
            android:textColor="@drawable/button_font_style"
            android:textSize="20.0sp" />

    </LinearLayout>
    <!-- navigation buttons band end -->

    <!-- band start -->
    <LinearLayout
        android:id="@+id/seekBarsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="left"
        android:orientation="horizontal">

        <cs2c.EQ.Controls.VerticalSeekBar
            android:id="@+id/verticalSeekBar1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <cs2c.EQ.Controls.VerticalSeekBar
            android:id="@+id/verticalSeekBa2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />




    </LinearLayout>
    <!-- band end -->


</LinearLayout>