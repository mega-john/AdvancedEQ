<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/activity_background_rl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/music_balancer_left_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27.0dip"
        android:layout_marginTop="24.0dip"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/music_balancer_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39.0dip"
            android:layout_marginTop="0.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/music_equalizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/sound_style_balancer_bg"
                android:gravity="center"
                android:text="@string/equalizer"
                android:textColor="@drawable/button_font_style"
                android:textSize="16.0sp" />

            <TextView
                android:id="@id/music_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100.0dip"
                android:layout_marginTop="80.0dip"
                android:background="@drawable/sound_style_balancer_bg"
                android:gravity="center"
                android:text="@string/reset"
                android:textColor="@drawable/button_font_style"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/music_balancer_seekbar_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_balancer_frame"
            android:layout_marginLeft="46.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/box_bg"
            android:visibility="visible">

            <TextView
                android:id="@id/music_balancer_balancer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="132.0dip"
                android:layout_marginTop="8.0dip"
                android:textColor="@color/white"
                android:textSize="19.0sp" />

            <TextView
                android:id="@id/music_balancer_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="78.0dip"
                android:layout_marginTop="72.0dip"
                android:text="@string/increase"
                android:textColor="@color/white"
                android:textSize="19.0sp" />

            <TextView
                android:id="@id/music_balancer_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/music_balancer_increase"
                android:layout_marginLeft="93.0dip"
                android:layout_toRightOf="@id/music_balancer_increase"
                android:text="@string/add"
                android:textColor="@color/white"
                android:textSize="19.0sp" />

            <RelativeLayout
                android:id="@id/text_frame_bt_music_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.0dip"
                android:layout_marginTop="128.0dip"
                android:background="@drawable/line_bg">

                <SeekBar
                    android:id="@id/music_balancer_seekbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="286.0dip"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:maxHeight="16.0dip"
                    android:maxWidth="16.0dip"
                    android:minHeight="16.0dip"
                    android:minWidth="16.0dip"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="3.0dip"
                    android:progress="0"
                    android:progressDrawable="@drawable/music_balancer_seekbar_style"
                    android:thumb="@drawable/dot"
                    android:thumbOffset="13.0dip" />
            </RelativeLayout>
        </RelativeLayout>

        <AbsoluteLayout
            android:id="@id/music_balancer_right_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="453.0dip"
            android:layout_marginTop="50.0dip"
            android:background="@drawable/car">

            <ImageView
                android:id="@id/music_balancer_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="98.0dip"
                android:layout_marginTop="116.0dip"
                android:background="@drawable/car_dot" />
        </AbsoluteLayout>
    </RelativeLayout>
</LinearLayout>